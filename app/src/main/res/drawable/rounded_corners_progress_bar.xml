<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="300dp"/>
            <solid android:color="@color/color_D3CAC6C6"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="300dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_FFD6FF"
                    android:startColor="@color/color_FFF1D170"
                    android:type="linear" />
            </shape>
        </scale>
    </item>
</layer-list>